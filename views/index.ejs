<script>
    var socket = io();
    socket.on('im_subscriber_submit', function (subscribed, isUnique) {
        if(subscribed) {
            $('#im_response_container').html('<span class="label label-success">Email subscribed successfully.</span>');
        }else if(isUnique == false) {
            $('#im_response_container').html('<span class="label label-danger">Email already subscribed.</span>');
        }else {
            $('#im_response_container').html('<span class="label label-danger">Something went wrong while subscribing.</span>');
        }
    });
    $('#im_subscribe_form').submit(function () {
        socket.emit('im_subscriber_submit', $('#im_subscribe_email').val());

        return false;
    });
</script>
